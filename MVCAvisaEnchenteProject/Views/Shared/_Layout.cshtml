<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Avisa Enchente!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom-bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="/lib/fa-icons/all.css" />
</head>
<body>
    <div class="content" style="height: 100%">
        @if ((string)ViewData["Title"] != "Página Inicial" || User.Identity.IsAuthenticated)
        {
            <header style=" height: 8.5vh;">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                    <div class="container">
                        <a class="navbar-brand text-primary font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Avisa Enchente!</a>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        }
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <ul class="navbar-nav flex-grow-1 justify-content-end">
                                @if (User?.Identity?.IsAuthenticated ?? false)
                                {
                                    <li class="nav-item mr-4">
                                        <a class="nav-link text-primary nav-link-text" id="Index" asp-controller="Home" asp-action="Index">Inicio</a>
                                    </li>

                                    <li class="nav-item mr-4">
                                        <a class="nav-link text-primary nav-link-text" id="SobreNos" asp-controller="Home" asp-action="SobreNos">Sobre Nós</a>
                                    </li>
                                    <li class="nav-item mr-4">
                                        <a class="nav-link text-primary nav-link-text" id="ComoFunciona" asp-controller="Home" asp-action="ComoFunciona">Como Funciona?</a>
                                    </li>

                                    <li class="nav-item dropdown  meu-perfil-button">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding: 0">
                                            <img src="/img/image.png" width="40" height="40" class="rounded-circle">
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                            <a class="dropdown-item meu-perfil-button" asp-controller="Home" asp-action="ComoFunciona"><i class="fa-solid fa-user"></i> Meu Perfil</a>
                                            <a class="dropdown-item logout-button" asp-controller="Conta" asp-action="Logout" title="Sair"><i class="fa-solid fa-arrow-right-from-bracket fa-sm"></i> Sair</a>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>

                    </div>
                </nav>
            </header>
        }
        <div class="container" style=" height: calc(100% - 8vh);">
            <partial name="_NotificationPartial" />
            <main role="main" style=" height: 100%;">
                @RenderBody()
            </main>
        </div>

        @if ((string)ViewData["Title"] != "Página Inicial" || User.Identity.IsAuthenticated)
        {
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2022 - Avisa Enchente! - <a asp-area="" asp-controller="Home" asp-action="SobreNos">Sobre Nós</a>
                </div>
            </footer>
        }
    </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/fa-icons/all.js"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>
