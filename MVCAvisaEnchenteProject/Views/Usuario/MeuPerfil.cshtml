@model Usuario

@{
    ViewData["Title"] = "Meu Pefil";
}


<div class="container bootstrap">
    <div class="row">
        <div class="col-sm-10"><h3 class="text-primary pt-3">@ViewData["Title"]</h3></div>
        <div class="col-sm-2 mt-3"><button class="btn btn-danger btn-sm rounded-1 float-right"><i class="fa fa-trash "></i>  Excluir Conta</button></div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="col-sm-10"><h5 class="text-primary">Dados Pessoais</h5></div>
            <div class="row">
                <div class="col-sm-3">
                    <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar rounded-circle img-thumbnail" alt="avatar" />
                    <div class="custom-file mt-1">
                        <label class="custom-file-label float-left mx-auto" for="customFile">Escolha outra foto</label>
                        <input type="file" class="custom-file-input" id="customFile">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Senha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Senha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoUsuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoUsuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CidadeAtendidaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CidadeAtendidaId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrimeiroLogin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrimeiroLogin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        window.addEventListener('load', function () {

            $('#index').removeClass('active');
            $('#sobre-nos').removeClass('active');
            $('#como-funciona').removeClass('active');
            $('#meu-perfil-image').addClass('active');
            $('#configuracoes').removeClass('active');

        });
    </script>
}
