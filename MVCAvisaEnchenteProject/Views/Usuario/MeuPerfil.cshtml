@model Usuario

@{
    ViewData["Title"] = "Meu Perfil";
}

<div class="row">
    <div class="col-sm-9"><h3 class="text-primary pt-3">@ViewData["Title"]</h3></div>
    <div class="col-sm-3 mt-3 p-0"><button class="btn btn-danger btn-sm rounded-1 float-right mr-4"><i class="fa fa-trash "></i>  Excluir Conta</button></div>
</div>
<div class="container">

    <div class="card border-primary mb-4">
        <div class="card-body">
            <div class="row p-0">
                <div class="col-sm-10 ml-2"><h5 class="text-primary">Dados Pessoais </h5></div>
                <div class="col-sm-3 mt-4">
                    <img src="http://ssl.gstatic.com/accounts/ui/avatar_1x.png" class="avatar rounded-circle img-thumbnail ml-5" alt="avatar" />
                    <div class="custom-file mt-1">
                        <label class="custom-file-label" for="customFile">Escolher outra foto</label>
                        <input type="file" class="custom-file-input" id="customFile">
                    </div>
                </div>
                <div class="col-sm-5 d-flex align-items-start flex-column">
                    <div class="row pt-3 ">
                        <div class="col-sm-12 "><h5 class="text-primary">Nome Completo:</h5></div>
                        <div class="col-sm-12 ">
                            @Html.DisplayFor(model => model.NomeCompleto)
                        </div>
                    </div>

                    <div class="row pt-3">
                        <div class="col-sm-12 "><h5 class="text-primary">Email:</h5></div>
                        <div class="col-sm-12">
                            @Html.DisplayFor(model => model.Email)
                        </div>
                    </div>
                </div>
                <button class=" btn-warning btn-sm rounded-1 align-self-end h-25 mb-4"><i class="fa fa-user-edit"></i> Editar Dados Pessoais</button>
            </div>
        </div>
    </div><div class="card border-primary">
        <div class="card-body">
            <div class="row p-0">
                <div class="col-sm-12 ml-2"><h5 class="text-primary">Sua Localização <i class="fa fa-location-dot"></i> </h5></div>
                <div class="col-sm-8 d-flex align-items-start flex-column">
                    <div class="row pt-3 ml-3">
                        <div class="col-sm-12 "><h5 class="text-primary">Estado:</h5></div>
                        <div class="col-sm-12 ">
                            @Html.DisplayFor(model => model.NomeCompleto)
                        </div>
                    </div>

                    <div class="row pt-3 ml-3">
                        <div class="col-sm-12 "><h5 class="text-primary">Cidade:</h5></div>
                        <div class="col-sm-12">
                            @Html.DisplayFor(model => model.Email)
                        </div>
                    </div>
                </div>
                <button class=" btn-warning btn-sm rounded-1 align-self-end h-25 "><i class="fa fa-edit"></i> Editar Localização</button>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        window.addEventListener('load', function () {

            $('#index').removeClass('active');
            $('#sobre-nos').removeClass('active');
            $('#como-funciona').removeClass('active');
            $('#meu-perfil-image').addClass('active');
            $('#configuracoes').removeClass('active');

        });
    </script>
}
